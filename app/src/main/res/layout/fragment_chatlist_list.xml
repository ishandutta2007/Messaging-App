<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <com.app.infideap.stylishwidget.view.ATextView
        android:visibility="gone"
        android:id="@+id/textView_no_result"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/nochatavailable"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.google.firebase.quickstart.readcontact.controller.access.ui.fragment.ChatListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.google.firebase.quickstart.database.controller.access.ui.fragment.ChatListFragment"
        tools:listitem="@layout/fragment_chatlist" />
</FrameLayout>
